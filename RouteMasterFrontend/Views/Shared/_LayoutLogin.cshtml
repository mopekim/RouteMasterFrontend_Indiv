@model RouteMasterFrontend.Models.ViewModels.Members.MemberLoginVM
@{
    Layout = "";
    ViewData["Title"] = "MemberLogin";
}
<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <style>
        *, *:before, *:after {
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            font-family: "Raleway", sans-serif;
        }

        .container {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

            .container:hover .top:before, .container:hover .top:after, .container:hover .bottom:before, .container:hover .bottom:after, .container:active .top:before, .container:active .top:after, .container:active .bottom:before, .container:active .bottom:after {
                margin-left: 200px;
                transform-origin: -200px 50%;
                transition-delay: 0s;
            }

            .container:hover .center, .container:active .center {
                opacity: 1;
                transition-delay: 0.2s;
            }

        .top:before, .top:after, .bottom:before, .bottom:after {
            content: "";
            display: block;
            position: absolute;
            width: 200vmax;
            height: 200vmax;
            top: 50%;
            left: 50%;
            margin-top: -100vmax;
            transform-origin: 0 50%;
            transition: all 0.5s cubic-bezier(0.445, 0.05, 0, 1);
            z-index: 10;
            opacity: 0.65;
            transition-delay: 0.2s;
        }

        .top:before {
            transform: rotate(45deg);
            background: #AAAAAA;
        }

        .top:after {
            transform: rotate(135deg);
            background: #666666;
        }

        .bottom:before {
            transform: rotate(-45deg);
            background: #0044BB;
        }

        .bottom:after {
            transform: rotate(-135deg);
            background: #0088A8;
        }

        .center {
            position: absolute;
            width: 400px;
            height: 400px;
            top: 50%;
            left: 50%;
            margin-left: -200px;
            margin-top: -200px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 30px;
            opacity: 0;
            transition: all 0.5s cubic-bezier(0.445, 0.05, 0, 1);
            transition-delay: 0s;
            color: #333;
        }

            .center input {
                width: 200px;
                padding: 15px;
                margin: 5px;
                border-radius: 10px;
                border: 1px solid #ccc;
                font-family: inherit;
            }

        .container .btn-primary:hover {
            background: #FFBBBB;
            color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 5px #FFBBBB, 0 0 25px #FFBBBB, 0 0 50px #FFBBBB, 0 0 100px #FFBBBB;
        }

        .header {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>

<body>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <div class="container" onclick="onclick">
        <h1 class="header">RouteMaster</h1>
        <div class="top"></div>
        <div class="bottom"></div>
        <div class="center">

            <h2>旅程起點</h2>
            <form asp-action="MemberLogin" class="p-3 mt-3" id="loginForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group d-flex align-items-center">
                    <span class="far fa-user"></span>
                    <input asp-for="Account" class="form-control" id="Account" /><br />
                    <span asp-validation-for="Account" class="text-danger"></span>
                </div>
                <div class="form-group d-flex align-items-center">
                    <span class="fas fa-key"></span>
                    <input asp-for="Password" class="form-control" id="Password" /><br />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="submit" value="登入" class="btn btn-primary" />

            </form>
            <div class="text-center fs-6">
                <a asp-action="MemberRegister" class=" btn btn-warning ">註冊會員</a> or
                <a asp-action="MemberForgetPassword" class="btn btn-success">忘記密碼</a>
            </div>
            <br />
            <div id="g_id_onload"
                 data-client_id="161026089487-tl7dobkpg2r05cnahqrho3af1vdjn33q.apps.googleusercontent.com"
                 data-login_uri="https://localhost:7145/Members/GoogleLogin"
                 data-auto_prompt="false">
            </div>
            <div class="g_id_signin"
                 data-type="icon"
                 data-size="large"
                 data-theme="outline"
                 data-text="sign_in_with"
                 data-shape="pill"
                 data-logo_alignment="left">
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script>

    $(document).ready(function () {
        $('#loginForm').submit(function (event) {
            event.preventDefault();

            const formData = {
                Account: $('#Account').val(),
                Password: $('#Password').val()
            };

            fetch("https://localhost:7145/Members/MemberLogin", {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData),
            })
                .then(function (response) {
                    return response.json();
                })
                .then(function (data) {
                    if (data.success) {
                        window.location.href = 'https://localhost:7145/Home/Index';
                    } else {
                        //alert('帳密錯誤', '請再試一次', 'error')
                        swal("帳密錯誤!", "請再試一次!", "error", { button: "返回" });
                    }
                })
                .catch(error => {
                    console.error('An error occurred:', error);
                });
        });
    });
</script>

