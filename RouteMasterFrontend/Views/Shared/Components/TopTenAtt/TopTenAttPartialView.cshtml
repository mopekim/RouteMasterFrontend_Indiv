@model IEnumerable<RouteMasterFrontend.Models.ViewModels.AttractionVMs.AttractionTopTenVM>

    

<div style="height:400px; width:100%">
    <div id="carouselExampleCaptions" class="carousel slide h-100 carousel-fade">
        <div class="carousel-indicators">
            @for (var i = 0; i < Model.Count(); i++)
            {
                if (i == 0)
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to=@i class="active" aria-current="true" aria-label="Slide @(i+1)"></button>
                }
                else
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to=@i aria-label="Slide @(i+1)"></button>
                }

            }

        </div>
        <div class="carousel-inner">
            @for (var i = 0; i < Model.Count(); i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img src="~/AttractionImages/@Model.ToArray()[i].Image" class="d-block w-100 attraction" style="height:400px; object-fit:cover" onclick=" location.href='@Url.Action("Details", new { id = Model.ToArray()[i].Id })'">
                        <div class="carousel-caption d-none d-md-block ">
                            <h3 style="text-shadow: 0 0 5px gray, 0 0 5px gray, 0 0 5px gray, 0 0 5px gray; font-weight: bold;"><strong>@Model.ToArray()[i].Name</strong></h3>
                            <h5 style="text-shadow: 0 0 5px gray, 0 0 5px gray, 0 0 5px gray, 0 0 5px gray; font-weight: bold;"><strong>@($"{Model.ToArray()[i].Region} {Model.ToArray()[i].Town}")</strong></h5>
                            @Html.ActionLink("景點詳情", "Details", new { id = Model.ToArray()[i].Id }, new { @class = "d-none" })
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="~/AttractionImages/@Model.ToArray()[i].Image" class="d-block w-100 attraction" style="height:400px; object-fit:cover" onclick=" location.href='@Url.Action("Details", new { id = Model.ToArray()[i].Id })'">
                        <div class="carousel-caption d-none d-md-block " >
                            <h3 style="text-shadow: 0 0 5px gray, 0 0 5px gray, 0 0 5px gray, 0 0 5px gray; font-weight: bold;"><strong>@Model.ToArray()[i].Name</strong></h3>
                            <h5 style="text-shadow: 0 0 5px gray, 0 0 5px gray, 0 0 5px gray, 0 0 5px gray; font-weight: bold;"><strong>@($"{Model.ToArray()[i].Region} {Model.ToArray()[i].Town}")</strong></h5>
                            @Html.ActionLink("景點詳情", "Details", new { id = Model.ToArray()[i].Id }, new { @class = "d-none" })
                        </div>
                    </div>
                }

            }


        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

</div>

