@model RouteMasterFrontend.EFModels.ExtraServiceProduct

@{
    ViewData["Title"] = "CreateExtraServiceProduct";
}

<h1>CreateExtraServiceProduct</h1>

<h4>ExtraServiceProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateExtraServiceProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExtraServiceId" class="control-label"></label>
                <select asp-for="ExtraServiceId" class ="form-control" asp-items="ViewBag.ExtraServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" id="dateInput" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <input type="number" name="interValDays" />
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById("dateInput").valueAsDate = new Date('@ViewBag.CurrentDate.ToString("yyyy-MM-dd")');
    </script>
}
